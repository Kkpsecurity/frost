# Environment Configuration for AI Course Assistant Service

# Service Configuration
PORT=3003
NODE_ENV=development

# Database (PostgreSQL - Frost)
# Use credentials from main Laravel .env file (DO NOT commit real credentials)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=frost-devel
DB_USER=postgres
DB_PASSWORD=

# AI Model Configuration
# Options: llama, openai, anthropic
AI_PROVIDER=llama

# LLaMA Configuration (if using local Ollama)
LLAMA_HOST=http://localhost:11434
MODEL_NAME=llama2

# OpenAI Configuration (if using cloud API)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Analysis Settings
ANALYSIS_INTERVAL=5000
SENTIMENT_THRESHOLD=0.3
CONFUSION_KEYWORDS=help,confused,stuck,don't understand,lost,what,how do i,error,issue,problem
MAX_BATCH_SIZE=50

# WebSocket Configuration
WS_PORT=3004

# Logging
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
